# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./workflow.db

# For production (Postgres)
# DATABASE_URL=postgresql://user:password@localhost:5432/workflow_db

# Logging Configuration
LOG_LEVEL=INFO

# Application Environment
APP_ENV=dev

# Application Settings
PROJECT_NAME=workflow_service
APP_VERSION=0.1.0

# Security Configuration
# API_KEY - Required for write operations (POST/PUT/PATCH/DELETE)
# If not set, write endpoints are open (dev mode only)
# For production, set a strong random key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# API_KEY=your-secret-api-key-here

# Git commit SHA (set by CI/CD)
# GIT_COMMIT=abc123def456
